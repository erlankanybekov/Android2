<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="top|center"
    tools:context=".ui.auth.LoginFragment">

    <!--- вводим номер -->

    <TextView
        android:id="@+id/textphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Ваш номер телефона"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="+996xxxxxxxxx"
        android:background="@color/teal_200"

        android:textAlignment="center"
        android:padding="16dp"
        app:prefixText="+996" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#2979FF"
        android:text="Continue"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/editPhone"
        app:layout_constraintStart_toStartOf="@+id/editPhone"
        app:layout_constraintTop_toBottomOf="@+id/editPhone" />



    <!--- вводим код -->


    <TextView
        android:id="@+id/textcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Введите отправленный код"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:hint="000000"
        android:inputType="phone"
        android:padding="16dp"
        android:textAlignment="center"
        app:prefixText="+996"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/resendcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="@string/resentcode"
        android:textColor="#807777"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:fontFamily="sans-serif-medium"
        android:padding="5dp"
        android:text="min:sec"
        android:textColor="#807777"
        android:textSize="14sp" />





    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#2979FF"
        android:text="Confirm"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/editPhone"
        app:layout_constraintStart_toStartOf="@+id/editPhone"
        app:layout_constraintTop_toBottomOf="@+id/editPhone" />





</LinearLayout>